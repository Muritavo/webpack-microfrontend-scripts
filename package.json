{
  "name": "@muritavo/webpack-microfrontend-scripts",
  "version": "0.0.6",
  "description": "A series of webpack build and watch script with microfrontends in mind",
  "main": "index.js",
  "author": "Murilo Oliveira de Araujo",
  "license": "MIT",
  "private": false,
  "types": "./index.d.ts",
  "bin": {
    "react-start": "./bin/react/scripts/start.js",
    "react-build": "./bin/react/scripts/build.js"
  },
  "files": [
    "bin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Muritavo/webpack-microfrontend-scripts.git"
  },
  "scripts": {
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watchAll=true",
    "prestart:react": "tsc",
    "start:react": "export PORT=19001 && node bin/react/scripts/start.js --root=./src/react/test/application",
    "prestart:react-mfe": "tsc",
    "start:react-mfe": "export PORT=19000 && node bin/react/scripts/start.js --root=./src/react/test/microfrontend",
    "prebuild:react": "tsc",
    "build:react": "node bin/react/scripts/build.js --root=./src/react/test/application",
    "prepublish": "tsc"
  },
  "dependencies": {
    "@babel/core": "^7.14.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.16.0",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.1",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.6",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "react-refresh": "^0.10.0",
    "resolve-url-loader": "^4.0.0",
    "sass": "^1.34.1",
    "sass-loader": "^12.1.0",
    "style-loader": "^2.0.0",
    "systemjs": "^6.10.1",
    "systemjs-webpack-interop": "^2.3.7",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "webpack": "^5.53.0",
    "webpack-dev-server": "^4.2.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "@types/tmp": "^0.2.0",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^4.1.0",
    "babel-plugin-styled-components": "^1.12.0",
    "jest": "^27.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tmp": "^0.2.1",
    "ts-jest": "^27.0.3",
    "type-fest": "^1.2.0",
    "typescript": "^4.3.2"
  }
}
